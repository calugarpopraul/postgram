{% extends 'micro-post/base2.html.twig' %}
    {% block body %}


        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">


        <div class="container">
            <div class="row main">

                <div class="main-login main-center">
                    <form class="form-horizontal" method="post" action="#">

                        <div class="form-group">

                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <ul>
                                        <li><i class="fa fa-user prefix grey-text"></i></li>
                                        <li>    {{ form_row(form.username) }} </li>


                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="cols-sm-10">
                                <div class="input-group">

                                    <ul>
                                        <li><i class="fa fa-envelope prefix grey-text my-icon"></i>
                                        </li>
                                        <li>    {{ form_row(form.email) }} </li>


                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <ul>
                                    <li><i class="fa fa-lock prefix grey-text"></i>
                                    </li>
                                    <li>    {{ form_row(form.plainPassword.first) }} </li>


                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <ul>
                                        <li><i class="fa fa-lock prefix grey-text"></i></li>

                                        <li>   {{ form_row(form.plainPassword.second) }} </li>


                                    </ul>

                                </div>
                            </div>
                        </div>


                           <div class="wrapper">
                               <button type="button" class="button">Sign up</button>
                           </div>

                    </form>
                </div>
            </div>
        </div>








    {% endblock %}