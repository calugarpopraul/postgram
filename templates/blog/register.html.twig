{% extends 'micro-post/base2.html.twig' %}
    {% block body %}


        {#<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">#}
       <link href= " https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap-grid.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/js/bootstrap.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <link rel="stylesheet" href="{{ asset('build/css/register.css')}}">


   <div class="container" >

           <div class="col-md-4 col-md-offset-4" id="wrapper">

               <div class="row">
                   <div class="col-25">
                       <i class="fa fa-user prefix grey-text"></i>
                   </div>
                   <div class="col-75">
                       {{ form_row(form.username) }}
                   </div>
               </div>
               <div class="row">
                   <div class="col-25">
                       <i class="fa fa-envelope prefix grey-text my-icon"></i>
                   </div>
                   <div class="col-75">
                       {{ form_row(form.email) }}
                   </div>
               </div>
               <div class="row">
                   <div class="col-25">
                       <i class="fa fa-lock prefix grey-text"></i>
                   </div>
                   <div class="col-75">
                       {{ form_row(form.plainPassword.first) }}
                   </div>
               </div>
               <div class="row">
               <div class="col-25">
                   <i class="fa fa-lock prefix grey-text "></i>
               </div>
               <div class="col-75">
                   {{ form_row(form.plainPassword.second) }}
               </div>
               </div>

               <div class="row">
                   <input type="submit" value="Sign up" id="button">
               </div>
           </div>
   </div>




    {% endblock %}